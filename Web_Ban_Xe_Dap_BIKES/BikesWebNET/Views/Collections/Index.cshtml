@model IEnumerable<BikesWebNET.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/main")
@Styles.Render("~/Content/product")

<div class="container">
    <!-- Phần breadcrumb -->
    <div class="breadcrumb">
        <div class="grid">
            <a href="/">Trang chủ / </a>
            <a href="/collections">Danh mục / </a>
            <a class="br-main" href="/Collections/">Tất cả </a>
        </div>
    </div>

    <!-- Phần danh sách sản phẩm -->
    <div class="products">
        <div class="product-heading">Tất cả sản phẩm</div>
        <!-- Vòng lặp để hiển thị thông tin sản phẩm -->
        <div class="grid">
            <div class="grid__row">
                @foreach (var item in Model)
                {
                    <div class="grid__col-3">
                        <!-- Định danh sản phẩm -->
                        <h1 style="display:none" id="idProduct">@item.idProduct</h1>
                        <div class="product">
                            <!-- Hình ảnh sản phẩm -->
                            <img src="@item.ImageProducts.First().URLImage"
                                 alt=""
                                 class="product-img product-show" />
                            <img src="@item.ImageProducts.Last().URLImage"
                                 alt=""
                                 class="product-img product-img-hover" />
                        </div>
                        <div class="product-info">
                            <!-- Thông tin sản phẩm -->
                            <div class="product-title">
                                @item.nameProduct
                            </div>
                            <div class="product-price">@item.price,000₫</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Kết thúc danh sách sản phẩm -->

</div>

@Scripts.Render("~/bundles/product")
